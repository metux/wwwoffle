######## DEFINITIONS ########

# Make things

SHELL=/bin/sh

########

CC=@CC@
CFLAGS=@CFLAGS@

LD=@CC@
LDFLAGS=@LDFLAGS@

########

INCLUDE=@ZLIB_INC@ @GNUTLS_CFLAGS@ @GCRYPT_INC@
LIBRARY=@LIBS@ @ZLIB_LIB@ @GNUTLS_LIBS@ @GCRYPT_LIB@ @ETR_SOCKET_LIBS@

COMPILE=$(CC) -c $(CFLAGS)

LINK=$(LD) $(LDFLAGS)

######## COMPILATION ########

compile : test-doc \
	  test-msg \
	  test-modify \
	  test-gif \
	  test-io

######## INSTALLATION ########

install : compile

######## CLEAN UP ########

clean :
	-rm -f test-doc test-msg test-modify test-gif test-io
	-rm -f core *.o *~

########

distclean : clean
	-rm -f Makefile

